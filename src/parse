#!/usr/sbin/perl
#
#.... Switch indicies in block, banded matrix solvers
#
while( $l = <STDIN> ) {
    $l =~ s/mat\((.+?),(.+?),(.+?),(.+?),(.+?)\)/mat\($5,$3,$4,$1,$2\)/g;
    $l =~ s/per\((.+?),(.+?),(.+?),(.+?),(.+?)\)/per\($5,$3,$4,$1,$2\)/g;
    $l =~ s/per2\((.+?),(.+?),(.+?),(.+?)\)/per2\($4,$2,$3,$1\)/g;
    $l =~ s/rhs\((.+?),(.+?),(.+?)\)/rhs\($3,$1,$2\)/g;
    print( $l );
}
